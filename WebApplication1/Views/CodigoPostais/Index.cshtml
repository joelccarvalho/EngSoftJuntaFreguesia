@model IEnumerable<ModelProject.CodigoPostal>

@{
    ViewBag.Title = "Códigos Postais";
}

<center>
    <a class="btn btn-primary btn-block" href="/CodigoPostais/Create"><i class="fa fa-plus"></i> ADICIONAR NOVO</a>
</center>

<table class="table table-striped table-hover">
    <tr><th colspan="3" class="title-table">Lista de Códigos Postais</th></tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Localidade)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localidade)
                </td>
                <td>
                    <a class="btn btn-primary" href="/CodigoPostais/Edit/@item.ID"><i class="fa fa-pencil"></i> Editar</a>
                    <a class="btn btn-success" href="/CodigoPostais/Details/@item.ID"><i class="fa fa-list"></i> Detalhes</a>
                    <a class="btn btn-danger" href="/CodigoPostais/Delete/@item.ID"><i class="fa fa-trash"></i> Apagar</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="3" class="title-table">Sem dados!</td></tr>
    }

</table>
