@model ModelProject.InformacoesUteis

@{
    ViewBag.Title = "Create";
}

<h2 class="title-page">Enviar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Assunto, htmlAttributes: new { @class = "control-label col-md-2 table-edit-data" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Assunto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Assunto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2 table-edit-data" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Descricao, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2 table-edit-data">Enviar para:</label>
            <div class="col-md-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="userRadio" value="user" checked>
                    <label class="form-check-label" for="userRadio">
                        Utilizador
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="userPostalCode" value="postalcode">
                    <label class="form-check-label" for="userPostalCode">
                        Código-Postal
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group form-group-checkbox-user">
            @Html.LabelFor(model => model.Destinatario, "Destinatario", htmlAttributes: new { @class = "control-label col-md-2 table-edit-data" })
            <div class="col-md-10">
                @Html.DropDownList("Destinatario", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Destinatario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group form-group-checkbox-postalCode" style="display:none">
            @Html.LabelFor(model => model.IdCodigoPostal, "Codigo Postal", htmlAttributes: new { @class = "control-label col-md-2 table-edit-data" })
            <div class="col-md-10">
                @Html.DropDownList("IdCodigoPostal", null, htmlAttributes: new { @class = "form-control", })
                @Html.ValidationMessageFor(model => model.IdCodigoPostal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-primary" type="submit"><i class="fa fa-check"> Enviar</i></button>
                <a class="btn btn-success" href="/InformacoesUteis"><i class="fa fa-list"></i> Voltar à lista</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
